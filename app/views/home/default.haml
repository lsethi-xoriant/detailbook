- content_for(:head) do
  = stylesheet_link_tag :home, media: "all"
  = stylesheet_link_tag "//fonts.googleapis.com/css?family=Pacifico", media: "all"
#page.container
  %header#header
    / Added Register Button
    %ul#login-link.nav.navbar-nav.navbar-right
      %li
        .btn-group
          %button#login-link.btn.btn-default.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            Register
            %span.caret
          %ul.dropdown-menu
            %li
              = link_to "Student", new_user_registration_path(type: "student")
            %li
              = link_to "Tutor", new_user_registration_path(type: "tutor")
            %li
              = link_to "University", new_user_registration_path(type: "university")
