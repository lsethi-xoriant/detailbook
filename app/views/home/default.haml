        %a#login-link.btn.btn-primary{:href => "login"} Log In
      %li
    = link_to "DetailBook", root_path, :class => "logo-brand" 
  
  #myCarousel.carousel.slide
    %ul.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "1", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "2", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "3", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "4", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "5", "data-target" => "#myCarousel"}
      %li{"data-slide-to" => "6", "data-target" => "#myCarousel"}
    / Carousel items
    .carousel-inner
      .active.item
        = image_tag "landing/London.jpg"
      .item
        = image_tag "landing/NewYork.jpg"
      .item
        = image_tag "landing/Singapore.jpg"
      .item
        = image_tag "landing/Mumbai.jpg"
      .item
        = image_tag "landing/Dubai.jpg"
      .item
        = image_tag "landing/world1.jpg"
    / Carousel nav
    %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} &lsaquo;
    %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} &rsaquo;


  

