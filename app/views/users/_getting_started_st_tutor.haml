.btn-group
  %button.btn.btn-default{:type => "button"} #{t('profiles.edit.your_gender')}
  %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button"}
    %span.caret
  %ul.dropdown-menu
    %li
      = link_to t('profiles.edit.male'), current_user.sex
    %li
      = link_to t('profiles.edit.female'), current_user.sex
%p
= label_tag 'profile[date_of_birth]', t('profiles.edit.date_of_birth')
%br/
= date_field_tag 'profile[date_of_birth]', current_user.date_of_birth
%br/
= label_tag 'profile[university]', t('profiles.edit.university')
%br/
= text_field_tag 'profile[university]', current_user.university
%br/
= label_tag 'profile[country]', t('profiles.edit.country')
%br/
= text_field_tag 'profile[city]', current_user.country
%br/
= label_tag 'profile[city]', t('profiles.edit.city')
%br/
= text_field_tag 'profile[city]', current_user.city